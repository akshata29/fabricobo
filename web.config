<?xml version="1.0" encoding="utf-8"?>
<!--
  IIS web.config for ASP.NET Core InProcess hosting.
  Docs: https://learn.microsoft.com/aspnet/core/host-and-deploy/iis/
-->
<configuration>
  <location path="." inheritInChildApplications="false">
    <system.webServer>
      <handlers>
        <add name="aspNetCore" path="*" verb="*" modules="AspNetCoreModuleV2" resourceType="Unspecified" />
      </handlers>
      <aspNetCore processPath="dotnet"
                  arguments=".\FabricObo.dll"
                  stdoutLogEnabled="true"
                  stdoutLogFile=".\logs\stdout"
                  hostingModel="InProcess">
        <environmentVariables>
          <!--
            Override appsettings.json values via environment variables.
            Uncomment and set these if not using appsettings.json:

            <environmentVariable name="AzureAd__TenantId" value="" />
            <environmentVariable name="AzureAd__ClientId" value="" />
            <environmentVariable name="AzureAd__ClientSecret" value="" />
            <environmentVariable name="Foundry__ProjectEndpoint" value="" />
            <environmentVariable name="Foundry__AgentId" value="" />
          -->
        </environmentVariables>
      </aspNetCore>
    </system.webServer>
  </location>
</configuration>
